<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloWorldMVC</title>

    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="https://cdn.rawgit.com/balzss/luxbar/ae5835e2/build/luxbar.min.css" />
</head>
<body>
    <header id="luxbar" class="luxbar-fixed">
        <input type="checkbox" class="luxbar-checkbox" id="luxbar-checkbox"/>
        <div class="luxbar-menu luxbar-menu-right luxbar-menu-material-cyan">
            <ul class="luxbar-navigation">
                <li class="luxbar-header">
                    <a href="#" class="luxbar-brand">HelloWorld MVC</a>
                    <label class="luxbar-hamburger luxbar-hamburger-doublespin" 
                    id="luxbar-hamburger" for="luxbar-checkbox"> <span></span> </label>
                </li>
                <li class="luxbar-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="luxbar-item"><a asp-controller="Home" asp-action="About">About</a></li>
                <li class="luxbar-item"><a asp-controller="Home" asp-action="Services">Services</a></li>
            </ul>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>